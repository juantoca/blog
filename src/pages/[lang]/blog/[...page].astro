---
import BlogCard from '@/components/BlogCard.astro'
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import PageHead from '@/components/PageHead.astro'
import PaginationComponent from '@/components/ui/pagination'
import { SITE } from '@/consts'
import Layout from '@/layouts/Layout.astro'
import {
  getAllPostsAndSubpostsLocale,
  groupPostsByYear,
} from '@/lib/data-utils'
import { getLanguageFromUrl, localizeString } from '@/lib/i18n'
import type { PaginateFunction } from 'astro'

import { i18n } from 'astro:config/client'
import { toCodes } from 'astro:i18n' // @ts-ignore

export async function getStaticPaths({
  paginate,
}: {
  paginate: PaginateFunction
}) {
  var pages = []

  const locales: [] = toCodes(i18n!.locales)

  for (var l in locales) {
    const allPosts = await getAllPostsAndSubpostsLocale(locales[l])
    const pagination = paginate(allPosts, {
      pageSize: SITE.postsPerPage,
      params: { lang: locales[l] },
    })
    pages = pages.concat(pagination)
  }
  return pages
}

const { page } = Astro.props

const postsByYear = groupPostsByYear(page.data)
const years = Object.keys(postsByYear).sort((a, b) => parseInt(b) - parseInt(a))
---

<Layout class="max-w-3xl">
  <PageHead slot="head" title="Blog" />
  <Breadcrumbs
    items={[
      { label: 'Blog', href: '/blog', icon: 'lucide:library-big' },
      { label: `${localizeString(Astro, {en: "Page", es: "PÃ¡gina"})} ${page.currentPage}`, icon: 'lucide:book-copy' },
    ]}
  />

  <div class="flex min-h-[calc(100vh-18rem)] flex-col">
    {
      years.map((year) => (
        <section class="flex flex-col">
          <div class="text-muted-foreground/60 mt-6 mb-2.5 text-xs font-medium tracking-wider uppercase first:mt-0">
            {year}
          </div>
          <ul class="flex flex-col gap-2">
            {postsByYear[year].map((post) => (
              <li>
                <BlogCard entry={post} />
              </li>
            ))}
          </ul>
        </section>
      ))
    }
  </div>

  <div class="mt-6">
    <PaginationComponent
      currentPage={page.currentPage}
      totalPages={page.lastPage}
      baseUrl="/blog/"
      lang={getLanguageFromUrl(Astro.originPathname)}
      client:idle
    />
  </div>
</Layout>
