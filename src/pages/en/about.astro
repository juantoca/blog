---
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import PageHead from '@/components/PageHead.astro'
import { SITE } from '@/consts'
import Layout from '@/layouts/Layout.astro'

// Person Schema for About page
const personSchema = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  name: SITE.title,
  url: SITE.href,
  description: SITE.description,
}
---

<Layout class="max-w-3xl">
  <PageHead slot="head" title="About" />

  <!-- Person Schema for About page SEO -->
  <script type="application/ld+json" set:html={JSON.stringify(personSchema)} />

  <Breadcrumbs items={[{ label: 'About', icon: 'lucide:user' }]} />

  <section class="flex flex-col gap-8">
    <!-- Header -->
    <div class="flex flex-col gap-4">
      <div>
        <h1 class="text-3xl font-bold md:text-4xl">About</h1>
        <p class="text-muted-foreground mt-1 font-mono text-sm">
          Learn more about this blog
        </p>
      </div>
    </div>

    <!-- Main Content -->
    <div class="prose prose-sm dark:prose-invert max-w-none space-y-6">
      <p class="text-muted-foreground leading-relaxed">
        Welcome to <strong class="text-primary">{SITE.title}</strong>! This is a
        placeholder about page. Customize this content to tell your visitors
        about yourself, your blog, or your interests.
      </p>

      <p class="text-muted-foreground leading-relaxed">
        You can edit this page by modifying <code
          class="bg-muted rounded px-1.5 py-0.5 text-sm"
          >src/pages/about.astro</code
        >.
      </p>
    </div>
  </section>
</Layout>
