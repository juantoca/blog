---
import { Icon } from 'astro-icon/components'
import { localizeString } from "@/lib/i18n"

// Experience Timeline - Customize with your own experience
type ExperienceItem = {
  role: string
  company: string
  period: string
  current?: boolean
  icon: string
  key: string
}

// Customize your experience here
const experience: ExperienceItem[] = [
  {
    role: 'AI Backend Engineer',
    company: 'Sony Semiconductors Group(Midokura)',
    period: '2022 - 2025',
    current: true,
    icon: 'lucide:database',
    key: localizeString(Astro, {
      en: "I worked in the AITRIOS project, developing and operating ETL pipelines and training services for artificial vision models.",
      es: "Trabajé en el proyecto AITRIOS, desarrollando y operando pipelines ETL y servicios de entrenamiento de modelos de visión artificial."
    }),
  },
  {
    role: 'AI Developer',
    company: 'Siali Technologies S.L.',
    period: '2021 - 2022',
    icon: 'lucide:brain-cog',
    key: localizeString(Astro, {
      en: "I trained, deployed and monitored visual inspection AI models for companies like Acciona and the automotive sector for quality control and safety assurance.",
      es: "Entrené, desplegué y monitoricé modelos de IA de inspección visual para compañías como Acciona y el sector automotriz para control de calidad y prevención de riesgos laborales."
    }),
  }
]
---

<!-- Experience Timeline -->
<section class="mt-8">
  <div class="mb-6">
    <h2 class="mb-2 text-2xl font-semibold">{localizeString(Astro,  {en: "Experience", es: "Experiencia"})}</h2>
    <p class="text-muted-foreground text-sm">

      {localizeString(Astro, {
        en: "Professional journey and achievements",
        es: "Carrera profesional y logros"
      })}
    </p>
  </div>

  <div class="space-y-6">
    {
      experience.map((exp, index) => (
        <div class="relative">
          {index < experience.length - 1 && (
            <div
              class="bg-border absolute top-8 bottom-0 left-[11px] w-px"
              aria-hidden="true"
            />
          )}

          <div class="flex gap-4">
            <div
              class={`ring-background relative z-10 flex h-6 w-6 flex-shrink-0 items-center justify-center rounded-full ring-4 ${
                exp.current
                  ? 'bg-primary text-primary-foreground shadow-primary/20 shadow-lg'
                  : 'bg-muted text-muted-foreground'
              }`}
            >
              <Icon name={exp.icon} class="size-3.5" />
            </div>

            <div class="min-w-0 flex-1 pb-2">
              <div class="mb-1">
                <h3 class="text-lg leading-tight font-semibold">{exp.role}</h3>
                <p class="text-muted-foreground text-sm">
                  {exp.company} · {exp.period}
                </p>
              </div>
              <p class="text-muted-foreground/90 mt-2 text-sm leading-relaxed">
                {exp.key}
              </p>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</section>
