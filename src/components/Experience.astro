---
import { Icon } from "astro-icon/components"


// Experience Timeline - Customize with your own experience
type ExperienceItem = {
  role: string
  company: string
  period: string
  current?: boolean
  icon: string
  key: string
}


// Customize your experience here
const experience: ExperienceItem[] = [
  {
    role: 'Your Current Role',
    company: 'Current Company',
    period: '2022 - Present',
    current: true,
    icon: 'lucide:briefcase',
    key: 'Brief description of your current role and key achievements • Add more details about your responsibilities and accomplishments'
  },
  {
    role: 'Previous Role',
    company: 'Previous Company',
    period: '2020 - 2022',
    icon: 'lucide:server',
    key: 'Description of your previous role and achievements • Highlight key projects or responsibilities you had in this position'
  },
  {
    role: 'Earlier Role',
    company: 'Earlier Company',
    period: '2018 - 2020',
    icon: 'lucide:code',
    key: 'Description of your earlier role and achievements • Show your career progression and growth over time'
  },
]
---


  <!-- Experience Timeline -->
  <section class="mt-8">
    <div class="mb-6">
      <h2 class="text-2xl font-semibold mb-2">Experience</h2>
      <p class="text-sm text-muted-foreground">
        Professional journey and achievements
      </p>
    </div>
    
    <div class="space-y-6">
      {experience.map((exp, index) => (
        <div class="relative">
          {index < experience.length - 1 && (
            <div class="absolute left-[11px] top-8 bottom-0 w-px bg-border" aria-hidden="true"></div>
          )}
          
          <div class="flex gap-4">
            <div class={`relative flex-shrink-0 w-6 h-6 rounded-full flex items-center justify-center ring-4 ring-background z-10 ${
              exp.current ? "bg-primary text-primary-foreground shadow-lg shadow-primary/20" : "bg-muted text-muted-foreground"
            }`}>
              <Icon name={exp.icon} class="size-3.5" />
            </div>
            
            <div class="flex-1 pb-2 min-w-0">
              <div class="mb-1">
                <h3 class="font-semibold text-lg leading-tight">{exp.role}</h3>
                <p class="text-sm text-muted-foreground">
                  {exp.company} · {exp.period}
                </p>
              </div>
              <p class="text-sm text-muted-foreground/90 leading-relaxed mt-2">
                {exp.key}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>
